<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/icon"
            android:text="Title: "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/titleLabel"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/commandLabel"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/icon"
            android:text="Command: "
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/command"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/commandLabel"
            android:text="Command"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lastExecutionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/command"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/icon"
            android:text="Last executed: "
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lastExecution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/command"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/lastExecutionLabel"
            android:text="Last execution: "
            android:textSize="15sp" />

        <TextView
        android:id="@+id/exitCodeLabel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastExecution"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@+id/icon"
        android:text="Exit code: "
        android:textAlignment="textStart"
        android:textSize="15sp" />

        <TextView
            android:id="@+id/exitCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastExecution"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/exitCodeLabel"
            android:text="Exit code"
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amountsOfExecutionLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exitCode"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/icon"
            android:text="Executions: "
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amountsOfExecution"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exitCode"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/amountsOfExecutionLabel"
            android:text="executions"
            android:textAlignment="textStart"
            android:textSize="15sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>